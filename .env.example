.env.example
# Rename this file to .env and fill in your details.

# Get your Discord bot token from the Discord Developer Portal
DISCORD_BOT_TOKEN="your token here"

# The URL of your LM Studio server.
# This is the default if you're running it on the same machine.
# If you changed the port or are running it on a different machine, update this.
LM_STUDIO_API_URL="http://localhost:1234/v1"

# Comment out the provider you're not using

LLM_PROVIDER="LMSTUDIO"
# LLM_PROVIDER="GEMINI"

# If you're using Gemini, put the key here
GEMINI_API_KEY="your gemini key here"

# The Gemini model to use
GEMINI_MODEL="gemini-1.5-flash"

# Set to "true" to run the bot in the background using nohup.
# Logs will be saved to output.log.
RUN_IN_BACKGROUND="false"

# The maximum number of messages to keep in the history for each channel.
MAX_HISTORY="15"
